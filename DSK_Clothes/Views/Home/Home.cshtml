@{
    ViewBag.Title = "Home";
}

@model IEnumerable<DSK_Clothes.Models.Product>

@*---------------
------------------------------------- HEADER *@
@Html.Partial("HeaderNavbar", "Shared")

<main class="main">
    <div class="ban">
        <div class="wrap-video ban__img">
            <div class="home-video-desktop rto-box">
                <video id="video_background" preload="auto" autoplay loop muted>
                    <source src="https://levents.asia/wp-content/uploads/2022/09/TRANG-TIEN-1.0.mp4" type="video/mp4" />
                </video>
            </div>           
            <div class="home-video-mobile rto-box"></div>
        </div>
    </div>
    
    @*------------------------------------------------ NEW COLLECTION ------------------------------------------------*@
    <section class="sec-60 pd-0 abs">
        <div class="con">
            <h2 class="sec-title">
                NEW COLLECTION
            </h2>
            <div class="pd__list w-100 fl-wrap">
                @foreach (var item in Model)
                {
                    <div class="col-3">
                        <div class="pd__item aos-init aos-animate" title="DSK CLOTHES® | @Html.DisplayFor(modelItem => item.TenSP)">
                            <div class="pd__top coJS ">
                                <div class="rto-box">
                                    <img width="80%" height="300" src="/Images/img-home/@Html.DisplayFor(modelItem => item.Hinh)" alt="Alternate Text" />
                                </div>
                            </div>
                            <div class="pd__bot">
                                @Html.ActionLink("DSK CLOTHES® | " + @Html.DisplayFor(modelItem => item.TenSP), "Details", new { id = item.MaSP }, new { @class = "pd__title" })
                                <div class="pd__price">
                                    <span class="big m-black">
                                        <span class="woocommerce-Price-amount amount">
                                            <bdi>
                                                @Html.DisplayFor(modelItem => item.Gia)
                                                <span class="woocommerce-Price-currencySymbol">vnđ</span>
                                            </bdi>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <a href="~/Home/Shop" class="btn-sec hov-df pd__btn mg-ct" title="Xem thêm">XEM THÊM</a>
            </div>
        </div>
    </section>

